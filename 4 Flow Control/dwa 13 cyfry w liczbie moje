using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace cokolwiek
{
    public class Program
    {
        public static void Main()
        {

            int number;
            string numberek;


            Console.WriteLine("Enter number: ");
            numberek = Console.ReadLine();


            

            number = int.Parse(numberek);
            if (number < 0)
                Console.WriteLine("liczba jest ujemna");

            Console.WriteLine("liczba ma tyle cyfr: " + (numberek.Length - 1));
            
            Console.ReadKey();

        } // miało być żę tylko samo cyfr mimo że jest ujemna
    }
}
