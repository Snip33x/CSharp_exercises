using System;
					
public class Program
{
	public static void Main()
	{
		int  b;
		int suma = 0;
			
		do 
		{
			Console.WriteLine("Podaj liczbę ");
			b = int.Parse(Console.ReadLine());
			
			suma = suma + b;
			
			if (b != 0) 
				Console.WriteLine("Suma to : {0}", suma);

		}
		while ( b != 0);
		Console.WriteLine("zakończono");
	}
		
}	
