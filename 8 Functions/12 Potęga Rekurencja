using System;
					
public class Program
{
	
	public static int Power(int number,int exponent)
	{
		if (exponent == 0)
			return 1;
		else
			return number * Power(number, exponent -1);

	}
	
	public static void Main()
	{
		
		int x = 3;
		int y = 4;
	

		Console.WriteLine("x:{0} ^ y:{1} równa się {2}", x,y, Power(x,y));
	}
}


